<div id="upload-modal" class="modal">
    <div class="modal-content">
        <span id="close-modal" class="close">&times;</span>
        <form class="upload-form" action="/books/upload-book" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Book Name:</label>
                <input type="text" id="name" name="name" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" required>
            </div>
            <div class="form-group">
                <label for="cover">Cover Photo:</label>
                <input type="file" id="cover" name="coverPhoto" accept="image/*" required>
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <select name="category" id="category">
                    <% if (locals.categories) { %>
                        <% categories.forEach(category=> { %>
                            <option value=<%=category.name %>><%= category.name %>
                            </option>
                            <% }) %>
                                <% } %>
                </select>
            </div>
            <button type="submit" class="btn-submit">Upload Book</button>
        </form>
    </div>
</div>